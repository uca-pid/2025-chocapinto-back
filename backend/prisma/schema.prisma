model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String?
  id_api    Int?
  portada   String?

  // back relation (no join model defined â€” Prisma creates it implicitly)
  clubs     Club[]   @relation("ClubBooks")//desp lo borramos y poenmos clubsBooks ClubBook[]

}